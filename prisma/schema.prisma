generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  DRIVER
  PASSENGER
  BOTH
}

enum ContactType {
  EMAIL
  PHONE
  WECHAT
  OTHER
}

enum ConnectionStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum TripDirection {
  TO_CAMPUS
  GO_HOME
}

enum RideRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
}

model User {
  id           String      @id @default(cuid())
  email        String      @unique
  passwordHash String

  name         String
  photoUrl     String?
  contactType  ContactType
  contactValue String

  campus       String
  homeArea     String
  role         Role        @default(BOTH)
  timeZone     String      @default("America/Vancouver")

  homeAddress  String?
  homeLat      Float?
  homeLng      Float?

  isActive     Boolean     @default(true)

  schedule     ScheduleEntry[]

  sentConnections     ConnectionRequest[] @relation("SentConnections")
  receivedConnections ConnectionRequest[] @relation("ReceivedConnections")
  
  sentRideRequests     RideRequest[] @relation("SentRideRequests")
  receivedRideRequests RideRequest[] @relation("ReceivedRideRequests")

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([campus])
  @@index([homeArea])
}

model ScheduleEntry {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 0..6 (0 = Sunday)
  dayOfWeek       Int

  // store times as minutes since midnight (e.g., "08:30" => 510)
  toCampusMins    Int
  goHomeMins      Int

  // flexibility window, used by matching logic
  toCampusFlexMin Int      @default(15)
  goHomeFlexMin   Int      @default(15)

  // detour tolerance, used by matching logic
  toCampusMaxDetourMins Int @default(10)
  goHomeMaxDetourMins   Int @default(10)

  enabled         Boolean  @default(true)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, dayOfWeek])
  @@index([dayOfWeek, toCampusMins])
  @@index([dayOfWeek, goHomeMins])
}

model RideRequest {
  id          String            @id @default(cuid())
  
  fromUserId  String
  toUserId    String
  dayOfWeek   Int              // 0..6 (0 = Sunday)
  direction   TripDirection
  
  fromUser    User             @relation("SentRideRequests", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser      User             @relation("ReceivedRideRequests", fields: [toUserId], references: [id], onDelete: Cascade)
  
  message     String?
  status      RideRequestStatus @default(PENDING)
  driverNote  String?
  respondedAt DateTime?
  
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  
  // Business key uniqueness
  @@unique([fromUserId, toUserId, dayOfWeek, direction])
  @@index([toUserId, status, createdAt]) // for inbox queries
  @@index([fromUserId, status, createdAt]) // for outbox queries
}

model ConnectionRequest {
  id         String           @id @default(cuid())

  fromUserId String
  toUserId   String

  fromUser   User             @relation("SentConnections", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser     User             @relation("ReceivedConnections", fields: [toUserId], references: [id], onDelete: Cascade)

  message    String?
  status     ConnectionStatus @default(PENDING)
  respondedAt DateTime?

  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  // MVP: one connection thread per pair (you can “re-request” by updating status/message)
  @@unique([fromUserId, toUserId])
  @@index([toUserId, status, createdAt])
}
