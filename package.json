{
  "name": "school-carpool-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only bin/www.ts",
    "start": "node dist/bin/www.js",
    "test": "cross-env DATABASE_URL=postgresql://postgres:password@localhost:5432/carpool_test mocha --require ts-node/register 'tests/**/*.test.ts' --timeout 10000",
    "test:watch": "npm test -- --watch",
    "test:coverage": "nyc npm test",
    "frontend:dev": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:test": "cd frontend && npm test",
    "dev:all": "concurrently \"npm run dev\" \"npm run frontend:dev\"",
    "install:all": "npm install && cd frontend && npm install"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.6",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "joi": "^17.13.3",
    "morgan": "~1.9.1",
    "pg": "^8.18.0",
    "prisma": "^7.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.20",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/http-errors": "^2.0.4",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "chai": "^4.4.1",
    "concurrently": "^9.1.0",
    "cross-env": "^10.1.0",
    "mocha": "^10.8.2",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^19.0.5",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  }
}
