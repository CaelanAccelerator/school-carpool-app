{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "controllers/**/*",
    "lib/**/*", 
    "middleware/**/*",
    "routes/**/*",
    "tests/**/*",
    "bin/**/*",
    "app.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend/**/*",
    "public/**/*"
  ]
}